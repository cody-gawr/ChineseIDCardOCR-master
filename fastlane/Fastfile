fastlane_version "1.100.0"

default_platform :ios

platform :ios do
  before_all do
  end

  desc "Lint for Cocoapod"
  lane :pod_lint do
      Actions.sh("cd .. && pod lib lint --allow-warnings && cd fastlane")
  end

  desc "Lint"
  lane :lint do
      pod_lint
  end

  desc "Release new version"
  lane :release do |options|
      target_version = options[:version]
      raise "The version is missed. Use `fastlane release version:{version_number}`.`" if target_version.nil?

      ensure_git_branch
      ensure_git_status_clean

      test_all_schemes

      sync_build_number_to_git
      increment_version_number(version_number: target_version)
      version_bump_podspec(path: "ChineseIDCardOCR.podspec", version_number: target_version)

      git_commit_all(message: "Bump version to #{target_version}")

      Actions.sh("git tag -s #{target_version} -m ''")

      push_to_git_remote

      pod_push(allow_warnings: true)
  end

  lane :podpush do
    pod_push
  end

  after_all do |lane|

  end

  error do |lane, exception|

  end
end
